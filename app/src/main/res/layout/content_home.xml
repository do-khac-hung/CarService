<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.khachungbg97gmail.carservice.Home"
    tools:showIn="@layout/app_bar_home">

   <LinearLayout
       android:layout_width="368dp"
       android:layout_height="495dp"
       android:orientation="vertical"
       android:weightSum="2"
       tools:layout_editor_absoluteY="5dp"
       tools:layout_editor_absoluteX="5dp">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="268dp"
           android:background="@drawable/homescreen"
           tools:layout_editor_absoluteY="0dp"
           tools:layout_editor_absoluteX="5dp"
           android:layout_weight="0.03" >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:background="#3f24e2d5"
               android:weightSum="2">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:weightSum="2">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@drawable/newpost"
                       android:layout_gravity="center"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                        android:text="0"
                       android:textSize="30dp"
                       android:textAlignment="center"
                       android:textColor="@android:color/white"
                       android:layout_weight="1"
                       android:id="@+id/number"
                   />
                   </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:weightSum="2">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@drawable/baoduong"
                       android:layout_gravity="center"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Tạo lập"
                       android:textAlignment="center"
                       android:textSize="20dp"
                       android:textColor="@android:color/white"
                       android:layout_weight="1"
                       android:id="@+id/txtScheduleMessage"
                       />
               </LinearLayout>
                   />
           </LinearLayout>
       </RelativeLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="110dp"
           android:orientation="vertical"
           android:weightSum="2"
           android:layout_weight="1.68"
           tools:layout_editor_absoluteY="0dp"
           tools:layout_editor_absoluteX="8dp"
           android:layout_marginLeft="15dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="3"
               android:layout_gravity="center"
               android:layout_marginTop="5dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
                 <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="@string/agent"
                   android:textAlignment="center"
                   android:layout_weight="1"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtAddress"
                   />
                   <ImageView
                       android:src="@drawable/pin"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mAddress"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/hotline"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                     android:id="@+id/txtHotLine"
                       />
                   <ImageView
                       android:src="@drawable/customerservice"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mHotline"/>
                   </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="How-to Videos"
               android:textAlignment="center"
               android:layout_marginTop="20dp"
               android:layout_weight="1"
               android:id="@+id/txtVideo"
               />
                   <ImageView
                       android:src="@drawable/clapperboard"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mVideo"/>
                   </LinearLayout>
               </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
               <TextView
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="@string/maintenance"
                   android:id="@+id/txtSchedule"
                   android:textAlignment="center"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   />
                   <ImageView
                       android:src="@drawable/oil"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mSchedule"/>
                   </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
               <TextView
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="@string/center"
                   android:id="@+id/txtEpc"
                   android:textAlignment="center"
                   android:layout_weight="1"
                   />
                   <ImageView
                       android:src="@drawable/timingbelt"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mEPC"/>
                   </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:weightSum="5">
               <TextView
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="@string/more"
                   android:textAlignment="center"
                   android:layout_weight="1"
                   />
                   <ImageView
                       android:src="@drawable/more"
                       android:layout_margin="0dp"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:id="@+id/mAdd"/>

                   </LinearLayout>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>

</android.support.constraint.ConstraintLayout>
