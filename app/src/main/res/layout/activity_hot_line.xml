<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlayBackground"
    tools:context="com.khachungbg97gmail.carservice.HotLine">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy liên hệ với chúng tôi"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/authui_colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/btnSignUp"
            android:text="@string/helpPhone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1800-588888"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="4sp"
                android:textColor="@android:color/black"
                android:id="@+id/txtCall"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhắn tin với nhà sản "
            android:textColor="@color/btnSignUp"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:src="@drawable/ic_menu_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/chatUs"
                android:textSize="15sp"
                android:layout_marginLeft="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/txtSend"/>


        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
